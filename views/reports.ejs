<link rel="stylesheet" href="/css/reports.css">


<h4 class="text-center mt-4"><%= title %></h4>

<div class="container-fluid mt-5">
    <div class="row">

        <%- include('_side-nav-area') -%>

        <div class="col-12 col-sm">
            <!-- Payment Reports -->
            <div class="payment-reports card">
                <div class="card-header">
                    <form class="form-inline float-left">
                        <input class="form-control search" type="search" placeholder="Search Customer">
                    </form>
                    <button class="btn float-right" onclick="window.print()"><i class="fas fa-print"></i> Print</button>
                </div>
                <div class="card-body">
                    <table class="table table-responsive-sm text-center">
                        <thead class="thead-dark">
                            <tr>
                                <th scope="col"></th>
                                <th scope="col">S.No</th>
                                <th scope="col">Category</th>
                                <th scope="col">Customer Name</th>
                                <th scope="col">Total Amount Sent</th>
                                <th scope="col">No of Transaction</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for(payment of payments) { %>
                                <tr>  
                                    <th>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
                                        </div>
                                    </th>
                                    <th scope="row">1</th>
                                    <td><%= payment.category %></td>
                                    <td><%= payment.customer_name %></td>
                                    <td><%= payment.amount %></td>
                                    <td><%= payment.noOfTran %></td>
                                </tr>
                              <% } %>
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>


